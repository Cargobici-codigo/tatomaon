<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Wizard Crear Ruta Manual -->
    <record id="view_manual_routing_wizard" model="ir.ui.view">
        <field name="name">manual.routing.wizard.form</field>
        <field name="model">manual.routing.wizard</field>
        <field name="arch" type="xml">
            <form string="Crear Ruta Manual">
                <group>
                    <field name="name" placeholder="Nombre de la nueva ruta manual"/>
                    <field name="fecha" help="Fecha programada para la ruta."/>
                    <field name="punto_ids" widget="many2many_tags" domain="[('estado','=','pendiente')]" help="Seleccione puntos pendientes para incluir en la ruta."/>
                </group>
                <footer>
                    <button name="action_crear_ruta" type="object" string="Crear Ruta" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_manual_routing_wizard" model="ir.actions.act_window">
        <field name="name">Crear Ruta Manual</field>
        <field name="res_model">manual.routing.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
