<odoo>
    <record id="view_ruta_envio_tree" model="ir.ui.view">
        <field name="name">ruta.envio.tree</field>
        <field name="model">ruta.envio</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="fecha"/>
                <field name="estado"/>
                <field name="transportista_id"/>
            </tree>
        </field>
    </record>

    <record id="view_ruta_envio_form" model="ir.ui.view">
        <field name="name">ruta.envio.form</field>
        <field name="model">ruta.envio</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="fecha"/>
                        <field name="estado"/>
                        <field name="transportista_id"/>
                    </group>
                    <notebook>
                        <page string="Puntos">
                            <field name="pedidos_asignados">
                                <tree editable="bottom">
                                    <field name="direccion"/>
                                    <field name="estado"/>
                                    <field name="peso_kg"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
