<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Selector de puntos en mapa -->
    <record id="view_ruta_punto_map_selector" model="ir.ui.view">
        <field name="name">ruta.punto.map.selector</field>
        <field name="model">ruta.punto</field>
        <field name="arch" type="xml">
            <tree editable="bottom" create="false" string="Puntos disponibles">
                <field name="prioridad_manual"/>
                <field name="direccion"/>
                <field name="peso_kg"/>
                <field name="hora_apertura"/>
                <field name="hora_cierre"/>
                <field name="estado"/>
            </tree>
        </field>
    </record>

    <record id="action_ruta_punto_map_select" model="ir.actions.act_window">
        <field name="name">Seleccionar puntos desde mapa</field>
        <field name="res_model">ruta.punto</field>
        <field name="view_mode">tree,map,form</field>
        <field name="domain">[("ruta_id", "=", False)]</field>
    </record>

</odoo>
